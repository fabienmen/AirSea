<div class="banner" style="background-image: url('<%= cl_image_path @boat.photo.key %>')">
  <div class="reservation-container">
    <h1><%= @boat.name %></h1>
  </div>
</div>

<div class="boat-show-container">
  <div class="boat-content">
    <br>
    <h3><%= @boat.description %></h3>
    <br>
    <hr>
    <br>
    <%= link_to "Make a reservation", new_boat_reservation_path(@boat), class:"btn btn-reserve float-right" %>
    <h5><%= @boat.category %></h5>
    <h5>Year: <%= @boat.production_year %></h5>
    <h5 class="float-right">Price: <%= @boat.price_daily %>€/day</h5>
    <h5>Size: <%= @boat.size %> meters</h5>
    <br>
  </div>


<div class="container1 align-content-center flex-wrap">
      
        <div class="flex">
          <p class="review-header">Reviews</p>
          <% num = 0 %>
          <% @reviews.each do |review|  %>
              <%num += review.rating.to_i  %>
          <% end %>
          <% if @reviews.size > 0 %>
            <% if num != 0 %>
              <% everage = num / @reviews.size  %>
            <% end %>
          <% end %>
          <p class="float-right review-header">Average Rating: 
          <% if everage %>
            <% everage.times do %>
            <i class="fa fa-star checked"></i>  
            <% end %>
            <%  (5 - everage).times do  %>
            <i class="fa fa-star"></i>
            <% end %>
          <% else %>
           No Ratings
          <% end %>
          </p>
        </div>
        <hr class="w-100 mx-auto">
        <div class="row g-2">
          <% @reviews.each do |review|  %>
            <div class="col-12 col-md-6 col-lg-4">
              <div class="card h-100 mx-auto" style="width: 300px;">
                <div class="d-inline mx-2">
                  <%  review.rating.to_i.times do  %>
                    <i class="fa fa-star checked"></i>
                  <% end %>
                  <%  (5 - review.rating.to_i).times do  %>
                    <i class="fa fa-star"></i>
                  <% end %>
                </div>
                <div class="card-body">
                  <%# <h5 class=“card-title”>Title</h5> %>
                    <blockquote class="blockquote mb-0">
                      <p class="card-text"><%= review.comment %></p>
                      <footer class="blockquote-footer">By <strong><%= review.reservation.user.first_name %></strong></footer>
                    </blockquote>
                </div>
              </div>
            </div>
          <% end %>
        </div>
      </div>
</div>




</div>
