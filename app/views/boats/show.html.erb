<div class="container align-content-center flex-wrap">
    <div class="card card-show">
      <div class="boat-card boat-show-img" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= cl_image_path @boat.photo.key %>')">
        <p class="boat-name"><%= @boat.name %></p>
      </div>
      <p><strong class="card-strong"><%= @boat.category %> </strong></p>
      <p><strong class="card-strong">Year: </strong><%= @boat.production_year %></p>
      <p class="boat-price-show"><strong class="card-strong">Price: </strong><%= @boat.price_daily %>â‚¬/day</p>
      <p><strong class="card-strong">Size: </strong><%= @boat.size %> meters</p>
      <p><%= @boat.description %></p>
      <%= link_to "Make a reservation", new_boat_reservation_path(@boat), class:"btn btn-primary" %>

    </div>

      <div class="container">
        <div class="text-center">
          <h2>Reviews</h2>
          <hr class="w-75 mx-auto">
        </div>
        <div class="row g-2">
          <% @reviews.each do |review|  %>
            <div class="col-12 col-md-6 col-lg-4">
              <div class="card h-100 mx-auto" style="width: 300px;">
                <div class="d-inline mx-2">
                  <%  review.rating.to_i.times do  %>
                    <i class="fa fa-star checked"></i>
                  <% end %>
                  <%  (5 - review.rating.to_i).times do  %>
                    <i class="fa fa-star"></i>
                  <% end %>
                </div>
                <div class="card-body">
                  <%# <h5 class="card-title">Title</h5> %>
                    <blockquote class="blockquote mb-0">
                      <p class="card-text"><%= review.comment %></p>
                      <footer class="blockquote-footer">By <strong><%= review.reservation.user.first_name %></strong></footer>
                    </blockquote>
                </div>
              </div>
            </div>
          <% end %>
        </div>
      </div>
</div>
